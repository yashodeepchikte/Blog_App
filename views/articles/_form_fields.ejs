<div class="form-group">
    <label for="title">Title</label>
    <input required type="text" id="title" name="title" class="form-control"
    value = <%= article.title %> >
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>



<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control" placeholder="Markdown"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary" name="id"  value =  <%= article._id %>    > Save</button> 